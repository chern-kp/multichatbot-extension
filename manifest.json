{
    "manifest_version": 3,
    "name": "MultiChatbot",
    "version": "1.0",
    "description": "Speak with multiple chatbots from one text box",
    "permissions": ["activeTab", "storage", "scripting", "tabs", "windows"],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://*.google.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://apps.abacus.ai/*",
        "https://chat.deepseek.com/*",
        "https://huggingface.co/chat/*",
        "https://*.perplexity.ai/*",
        "https://poe.com/*",
        "https://grok.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*",
                "https://aistudio.google.com/*",
                "https://*.google.com/*",
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://apps.abacus.ai/*",
                "https://chat.deepseek.com/*",
                "https://huggingface.co/chat/*",
                "https://*.perplexity.ai/*",
                "https://poe.com/*",
                "https://grok.com/*"
            ],
            "js": ["src/content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https://www.google.com https://www.gstatic.com data:;"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    }
}
